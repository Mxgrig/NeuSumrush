<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:type="radial"
                android:gradientRadius="100%p"
                android:startColor="#80FFFFFF"
                android:endColor="#00FFFFFF" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>

    <!-- Button background (similar to your glossy_button) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:angle="270"
                android:endColor="#2D6C9E"
                android:startColor="#4CA0E8" />
            <stroke
                android:width="1dp"
                android:color="#85C5FF" />
        </shape>
    </item>

    <!-- Highlight -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp"
                android:radius="1dp" />
            <gradient
                android:angle="270"
                android:startColor="#80FFFFFF"
                android:endColor="#00FFFFFF"
                android:centerY="0.3" />
        </shape>
    </item>
</layer-list>